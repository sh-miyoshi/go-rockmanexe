<header class="c-header header">
  <div class="c-header-nav ml-2">
    <%= image_tag 'icon.png', :width => '75px' %>
  </div>
</header>

<div class="c-body">
  <main class="c-main">
    <div class="container-fluid">
      <div class="row-lg-10">
        <div class="card">
          <div class="card-header">
            <div class="row justify-content-between">
              <div class="ml-3 h4">ユーザー情報</div>
            </div>
          </div>
          <div class="card-body">
            <%= form_with url: user_detail_update_path, model: @user do |f| %>
            <div class="row mb-2">
              <label for="router_addr" class="col-sm-2 col-form-label">
                ID
              </label>
              <div class="col-md-5">
                <%= f.text_field :user_id, class: 'form-control read-text-dark', readonly: true %>
              </div>
            </div>
            <div class="row mb-2">
              <label for="router_addr" class="col-sm-2 col-form-label">
                名前
              </label>
              <div class="col-md-5">
                <%= f.text_field :name, class: 'form-control' %>
              </div>
            </div>
            <% if flash[:notice].present? %>
            <div class="alert alert-primary">
              <%== flash[:notice] %>
            </div>
            <% end %>
            <div class="row mb-2">
              <div class="col-md-5">
                <%= link_to "戻る", user_show_path, {class: "btn btn-outline-primary mr-3"} %>
                <%= f.submit "更新", {class: "btn btn-primary mr-3"} %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
